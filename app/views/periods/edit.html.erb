<%= simple_form_for @period do |f| %>
  <%= f.input :production, placeholder: @period.production %>
  <%= f.input :city, placeholder: @period.city %>
  <%= f.input :place, placeholder: @period.place %>
  <%= f.input :from %>
  <%= f.input :to %>
  <%= f.input :notes, as: :text, placeholder: @period.notes %>
  <%= f.button :submit %>
<% end %>