<%= simple_form_for @period do |f| %>
  
  <fieldset>
  <%= f.input :production, placeholder: 'Production' %>
  <%= f.input :city, placeholder: 'City' %>
  <%= f.input :place, placeholder: 'Place' %>
  <%= f.input :from %>
  <%= f.input :to %>
  <%= f.input :notes, as: :text, placeholder: 'Notes' %>
  </fieldset>

  <%= f.fields_for :performances do |builder| %>
    <%= render 'performance_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Performance", f, :performances %>

  <%= f.button :submit %>
<% end %>